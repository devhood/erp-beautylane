					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
								label.checkbox
									input#franchise(type="checkbox", ng-model="customer.franchise", value="1")
									| Franchise
				.row
					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
								input#credit_limit.form-control(type="text", ng-model="customer.credit_limit" required)
								span.col-md-12.control-label	Credit Limit 
					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left.select
								input#transaction_limit.form-control(type="text", ng-model="customer.transaction_limit" required)
								span.col-md-12.control-label
									| Unpaid Transaction Limit
				.row
					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
								select#payment_term.select2me.form-control.select2-offscreen(ng-model="customer.payment_term", ng-options="payment_term.payment_term_name as payment_term.payment_term_name for payment_term in payment_terms", ng-selected="{{customer.payment_term}}" required)
								span.col-md-12.control-label	Payment Terms 
					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left.select
								input#discount.form-control(type="text", ng-model="customer.discount" required)
								span.col-md-12.control-label	Permanent Discount 
				.row
					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
								select#shippingModeId.select2me.form-control.select2-offscreen(ng-model="customer.shipping_mode" ng-options="shipping_mode.shipping_mode_name for shipping_mode in shipping_modes", ng-selected="{{customer.shipping_mode}}" required)
								span.col-md-12.control-label	Shipping Mode 
					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left.select
								select#userId.select2me.form-control.select2-offscreen(ng-model="customer.sales_executive" ng-options="sales_executive.fullname for sales_executive in sales_executives", ng-selected="{{customer.sales_executive}}" required)
								span.col-md-12.control-label	Sales Executive 
				.row
					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
								select#priceTypeId.select2me.form-control.select2-offscreen(ng-model="customer.price_type" ng-options="price_type.price_type_name for price_type in price_types", ng-selected="{{customer.price_type}}" required)
								span.col-md-12.control-label	Price Type 
					.col-md-6
						.form-group
							.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left.select
								select#status.select2me.form-control.select2-offscreen(ng-model="customer.status" ng-options="status.status for status in statuses", ng-selected="{{customer.status}}" required)
								span.col-md-12.control-label	Customer Status 
