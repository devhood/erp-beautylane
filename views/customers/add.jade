						.form-body
							br
							br
							.row
								.col-md-1
								.col-md-10
									.col-md-4
										.form-group
											.col-xs-12.col-sm-12.col-md-12.col-lg-12
												input.form-control(type="text", ng-model="customer.contact.name")
												span.col-md-12.control-label	Name 
