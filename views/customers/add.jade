							.col-md-6
								.form-group
									.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
										select.select2me.form-control.select2-offscreen(ng-model="customer.shipping_address.zipcode", ng-options="zipcode.zipcode for zipcode in customer.shipping_address.city.zipcodes", required)
										span.col-md-12.control-label	Zipcode 
