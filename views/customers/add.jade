								.form-group
									.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
										select.select2me.form-control.select2-offscreen(ng-model="customer.shipping_address.country", ng-options="country.country for country in countries", required)
										span.col-md-12.control-label	Country 
							.col-md-6
								.form-group
									.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
										select.select2me.form-control.select2-offscreen(ng-model="customer.shipping_address.province", ng-options="geography.province for geography in geographys",required)
										span.col-md-12.control-label	Province 
						.row
							.col-md-6
								.form-group
									.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
										select.select2me.form-control.select2-offscreen(ng-model="customer.shipping_address.city", ng-options="city.city for city in customer.shipping_address.province.cities", required)
