				.portlet.box.grey
					.portlet-title
						.caption
							i.fa.fa-reorder
							| CONTACT PERSONS
						.tools
							a.collapse(href="javascript:;")
					.portlet-body.form
						.form-body
							.form-group
								.col-md-1
								.col-md-10
									.row
										br
										.col-md-12
											.portlet-body.flip-scroll
												table.table.table-bordered.table-condensed.flip-content
													thead.flip-content.bg-grey
														tr
															th Name
															th Position
															th Phone
													tbody
														tr(ng-repeat="contact in customer.contacts")
															td {{contact.name}}
															td {{contact.position}}
															td {{contact.phone}}
								.col-md-1
			.form-actions.fluid
				.row
					.col-md-6
						.col-md-offset-3.col-md-9
							button.btn.green(type="button", ui-sref="editCustomer({id:customer._id})") Edit
							button.btn.default(type="button", ui-sref="customers") Cancel
					.col-md-6