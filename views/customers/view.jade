						.row
							.col-md-6
								.form-group
									.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
										input.form-control(type="text", ng-model="customer.shipping_address.landmark", required disabled)
										span.col-md-12.control-label	Floor/Unit/Building
							.col-md-6
								.form-group
									.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
										input.form-control(type="text", ng-model="customer.shipping_address.barangay", required disabled)
										span.col-md-12.control-label	Street/Barangay
						.row
							.col-md-6
								.form-group
									.col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
										select.select2me.form-control.select2-offscreen(ng-model="customer.shipping_address.country",ng-selected="{{customer.shipping_address.country}}", ng-options="country.country for country in countries track by country.country", required disabled)
