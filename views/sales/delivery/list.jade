.portlet.box.grey
	.portlet-title
		.caption
			i.fa.fa-edit
			| ORDER LIST
		.tools
			a.collapse(href="javascript:;")
	.portlet-body.flip-scroll
		.table-toolbar
			.btn-group
				button(ui-sref="newDelivery").tooltips(data-container="body", data-placement="top", data-html="true", data-original-title="Add new Record")
					i.fa.fa-plus
					
		table#delivery_table.table.table-bordered.table-condensed.flip-content(ng-table="tableParams")
			thead.flip-content.bg-grey
				tr
				th DR Number
				th SO Number
				th Inventory Location
				th Order Source
				th Sales Executive
				th Delivery Method
				th Ordered By
				th Customer
				th Action
			tbody
				tr(ng-repeat="order in orders")
					td(data-title="'DR Number'", sortable="'drno'") {{order.drno}}
					td(data-title="'SO Number'", sortable="'sono'") {{order.sono}}
					td(data-title="'Inventory Location'", sortable="'inventory_location'") {{order.inventory_location}}
					td(data-title="'Order Source'", sortable="'order_source'") {{order.order_source}}
					td(data-title="'Sales Executive'", sortable="'sales_executive'") {{order.sales_executive}}
					td(data-title="'Delivery Method'", sortable="'delivery_method'") {{order.delivery_method}}
					td(data-title="'Ordered By'", sortable="'odered_by'") {{order.odered_by}}
					td
						button(type="button", ui-sref="viewDelivery({id:delivery._id})").tooltips(data-container="body", data-placement="top", data-html="true", data-original-title="View Record")
							i.fa.fa-eye
						button(type="button", ui-sref="editDelivery").tooltips(data-container="body", data-placement="top", data-html="true", data-original-title="Edit Record")
							i.fa.fa-pencil
						button(type="button", ng-click="deleteDelivery(delivery)").tooltips(data-container="body", data-placement="top", data-html="true", data-original-title="Delete Record")
							i.fa.fa-trash-o
