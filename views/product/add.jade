						.portlet-body.form
							.form-body
								.row
									br
									.col-md-2
									.col-md-8
										.col-xs-6.col-sm-6.col-md-6.col-md-6(style="padding-left: 0px;")
											button.btn-sm.green.custom-left(type="button", data-toggle="modal", href="#bundleModal")
												| Add New
												i.fa.fa-plus
										.col-xs-6.col-sm-6.col-md-6.col-md-6(style="padding-right: 0px;")
									.col-md-2
								.form-group
									.col-md-2
									.col-md-8
										.row
											br
											.col-md-12
												.portlet-body.flip-scroll
													table#bundlesTable.table.table-bordered.table-condensed.flip-content
														thead.flip-content.bg-grey
															tr
